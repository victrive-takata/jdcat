<?xml version="1.0" encoding="UTF-8" ?>
<schema>
	<h1>Study ID</h1>

	<category name="item">
		<border>stdyDscr->citation->titlStmt->IDNo</border>
		<label>M（Required）</label>
		<repeat>1（Not repeatable）</repeat>

		<attribute>
			<border>xml:lang</border>
			<label>O（Optional）</label>
			<repeat>0-1（Not repeatable）</repeat>
			<border>agency</border>
			<label>M（Required）</label>
			<repeat>1（Not repeatable）</repeat>

		</attribute>
	</category>

	<category name="description">
		<list>
			<li>Enter the ID assigned by each data distribution agency.</li>
		</list>
	</category>

	<category name="caution">
		<list>
			<li>Do not omit the agency attribute.Enter the agency abbreviation using half-width characters.</li>
			<!-- 必要なら増やす -->
		</list>
	</category>

	<category name="recommend">
		<codebox>&lt;IDNo agency="SSJDA" xml:lang="ja"&gt;0869&lt;/IDNo&gt;</codebox>
	</category>

	<category name="deprecate">
		<list>
			<li>Do not omit the agency.</li>
			<li>Do not use full-width characters in agency names.</li>

		</list>
		<codebox>&lt;IDNo&gt;0869&lt;/IDNo&gt;
&lt;IDNo agency="SSJ Data Archive" xml:lang="ja"&gt;0869&lt;/IDNo&gt;</codebox>
	</category>

	<category name="mapping">
		<list>
			<li>jpcoar:relatedIdentifier (identifierType=Local)</li>
		</list>
	</category>
</schema>